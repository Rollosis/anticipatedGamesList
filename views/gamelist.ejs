  <link rel="icon" type="image/x-icon" href="/images/joystick.png">
  <title>Most Hyped Games of 2022</title>

  <!-- Bootstrap core CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- Custom CSS file -->
  <link rel="stylesheet" type="text/css" href="/css/style.css">

</head>
<body>
  <main>

    <section class="sec-pad-top">
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <h1 class="display-5 fw-bold">Most Hyped Games of 2022</h1>
          </div>
        </div>
      </div>
    </section>

    <section class="sec-pad-top sec-pad-bottom">
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <a href="/" class="nav">Home </a>-&nbsp;&nbsp;&nbsp;
            <a href="/laura" class="nav">Laura </a>-&nbsp;&nbsp;&nbsp;
            <a href="/robert" class="nav">Robert</a>
          </div>
        </div>
      </div>
    </section>

    <section class="sec-pad-top">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h2>Laura's Hyped games</h2>
            <table class="table table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Game</th>
                  <th scope="col">Platform</th>
                  <th scope="col">Release date</th>
                </tr>
              </thead>
              <tbody>
                <% lauraGameList.forEach(function(game) { %>
                  <tr class="hover-trigger">
                    <td class="change-color"><%= game.name %></td>
                    <td class="change-color"><%= game.platform %></td>
                    <td class="change-color" name="test"><%= game.releaseDate %></td>
                    <!--<td>
                      <form class="" action="/delete" method="post">
                        <button type="submit" name="deleteButton" class="btn btn-danger hover-target deleteButton" value="<%= game._id %>" onClick="deleteConfirm()">X</button>
                      </form>
                    </td>
                    <td>
                      <form class="" action="/transferLaura" method="post">
                        <button type="submit" name="transferButton" class="btn btn-warning hover-target transferButton" value="<%= game.name %>" onclick="this.form.submit()">-></button>
                      </form>
                    </td>-->
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <div class="col-md-6">
            <h2>Robert's Hyped games</h2>
            <table class="table table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Game</th>
                  <th scope="col">Platform</th>
                  <th scope="col">Release date</th>
                </tr>
              </thead>
              <tbody>
                <% roopeGameList.forEach(function(game) { %>
                  <tr class="hover-trigger">
                    <td class="change-color"><%= game.name %></td>
                    <td class="change-color"><%= game.platform %></td>
                    <td class="change-color"><%= game.releaseDate %></td>
                    <!--<td>
                      <form class="" action="/deleted" method="post">
                        <button type="submit" name="deletedButton" class="btn btn-danger hover-target deleteButton" value="<%= game._id %>" onclick="this.form.submit()">X</button>
                      </form>
                    </td>
                    <td>
                      <form class="" action="/transferRoope" method="post">
                        <button type="submit" name="transferButton" class="btn btn-warning hover-target transferButton" value="<%= game.name %>" onclick="this.form.submit()">-></button>
                      </form>
                    </td>-->
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

    <section class="sec-pad-top sec-pad-bottom" id="releasedGamesTable">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h2>Laura's Reviews</h2>
            <table class="table table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Game</th>
                  <th scope="col">Rating</th>
                  <th scope="col">Review</th>
                </tr>
              </thead>
              <tbody>
                <% lauraReleasedGameList.forEach(function(game) { %>
                  <tr>
                    <td class="change-color"><%= game.name %></td>
                    <td class="change-color"><%= game.rating %></td>
                    <td class="change-color"><%= game.review %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <div class="col-md-6">
            <h2>Robert's Reviews</h2>
            <table class="table table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Game</th>
                  <th scope="col">Rating</th>
                  <th scope="col">Review</th>
                </tr>
              </thead>
              <tbody>
                <% robertReleasedGameList.forEach(function(game) { %>
                  <tr>
                    <td class="change-color"><%= game.name %></td>
                    <td class="change-color"><%= game.rating %></td>
                    <td class="change-color"><%= game.review %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

  </main>
  <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
  <script charset="utf-8" src="/js/index.js"></script>
</body>
</html>
