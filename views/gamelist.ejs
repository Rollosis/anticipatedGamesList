<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
  <meta name="generator" content="Hugo 0.88.1">
  <title>Most Hyped Games of 2022</title>

  <!-- Bootstrap core CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- Custom CSS file -->
  <link rel="stylesheet" type="text/css" href="/css/style.css">

</head>
<body>
  <main>

    <section class="sec-pad-top">
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <h1 class="display-5 fw-bold">Most Hyped Games of 2022</h1>
          </div>
        </div>
      </div>
    </section>

    <section class="sec-pad-top sec-pad-bottom" id="addForm">
      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <h2>Add a new game</h2>
            <form action="/" method="post">
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="selectTable">Who is adding?</label>
                  <select class="form-control" id="selectTable" name="user" required>
                    <option value="">Select user...</option>
                    <option value="laura" name="laura">Laura</option>
                    <option value="roope" name="roope">Roope</option>
                  </select>
                </div>
              </div>
              <div id="formGroup" class="form-row" style="display:none;">
                <div class="form-group col-md-6">
                  <label for="gameName">Game</label>
                  <input type="text" class="form-control" id="gamename" name="gameName" required>
                </div>
                <div class="form-group col-md-6">
                  <label for="platform">Platform</label>
                  <select id="platform" class="form-control" name="platform" required>
                    <option value="">Select platform...</option>
                    <option name="ps5">PS5</option>
                    <option name="switch">Switch</option>
                    <option name="pc">PC</option>
                    <option name="xbox">Xbox</option>
                  </select>
                </div>
                <div class="form-group col-md-6">
                  <label for="releaseDate">Release date</label>
                  <input type="date" class="form-control" name="releaseDate">
                </div>
              </div>
              <button type="submit" class="btn btn-primary">Add game</button>
            </form>
          </div>
          <div class="col-md-3">
            <h2>Delete a game from the list <a href="/deleteGame">here</a></h2>
          </div>
        </div>
      </div>
    </section>

    <section class="sec-pad-top sec-pad-bottom" id="lauraDeleteForm" style="display:none;">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <form action="/" method="post">
              <div class="form-row">
                <div class="form-group col-md-6">
                  <select class="form-control" id="deleteTable" name="user" required>
                    <option value="">Select game...</option>
                    <% lauraGameList.forEach(function(game) { %>
                      <option value="laura" name="laura" id="deleteLaura"><%= game.name %></option>
                    <% }); %>
                  </select>
                </div>
              </div>
              <button type="submit" class="btn btn-primary">Remove game</button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <section class="sec-pad-top sec-pad-bottom" id="roopeDeleteForm" style="display:none;">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <form action="/" method="post">
              <div class="form-row">
                <div class="form-group col-md-6">
                  <select class="form-control" id="deleteTable" name="user" required>
                    <option value="">Select game...</option>
                    <% roopeGameList.forEach(function(game) { %>
                      <option value="roope" name="roope" id="deleteRoope"><%= game.name %></option>
                    <% }); %>
                  </select>
                </div>
              </div>
              <button type="submit" class="btn btn-primary">Remove game</button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <section class="sec-pad-top">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h2>Laura</h2>
            <table class="table table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Game</th>
                  <th scope="col">Platform</th>
                  <th scope="col">Release date</th>
                </tr>
              </thead>
              <tbody>
                <% lauraGameList.forEach(function(game) { %>
                  <tr>
                    <td><%= game.name %></td>
                    <td><%= game.platform %></td>
                    <td><%= game.releaseDate %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <div class="col-md-6">
            <h2>Roope</h2>
            <table class="table table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Game</th>
                  <th scope="col">Platform</th>
                  <th scope="col">Release date</th>
                </tr>
              </thead>
              <tbody>
                <% roopeGameList.forEach(function(game) { %>
                  <tr>
                    <td><%= game.name %></td>
                    <td><%= game.platform %></td>
                    <td><%= game.releaseDate %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

  </main>
  <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
  <script charset="utf-8" src="/js/index.js"></script>
</body>
</html>
