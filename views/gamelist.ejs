  <title>Games of 2022</title>

  <!-- Bootstrap core CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- Custom CSS file -->
  <link rel="stylesheet" href="../css/style.css">

  <style>

  .sec-pad-top {
    padding-top:30px;
  }

  .sec-pad-bottom {
    padding-bottom:30px;
  }

  .form-group {
    margin:10px 0px;
  }

  #formGroup {
    margin-bottom:10px;
  }

  button {
    padding:10px 40px !important;
  }

  </style>
</head>

<body>
  <main>

    <section>
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <h1 class="display-5 fw-bold">Most Anticipated Games of 2022</h1>
          </div>
        </div>
      </div>
    </section>

    <section class="sec-pad-top sec-pad-bottom">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <form action="/" method="post">
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="selectTable">Who is adding?</label>
                  <select class="form-control" id="selectTable" name="user" required>
                    <option value="">Select user...</option>
                    <option id="a" value="laura" name="laura">Laura</option>
                    <option id="b" value="roope" name="roope">Roope</option>
                  </select>
                </div>
              </div>
              <div id="formGroup" class="form-row">
                <div class="form-group col-md-6">
                  <label for="gameName">Game</label>
                  <input type="text" class="form-control" id="gamename" name="gameName" required>
                </div>
                <div class="form-group col-md-6">
                  <label for="platform">Platform</label>
                  <select id="platform" class="form-control" name="platform" required>
                    <option value="">Select platform...</option>
                    <option name="ps5">PS5</option>
                    <option name="switch">Switch</option>
                    <option name="pc">PC</option>
                    <option name="xbox">Xbox</option>
                  </select>
                </div>
                <div class="form-group col-md-6">
                  <label for="releaseDate">Release date</label>
                  <input type="date" class="form-control" name="releaseDate">
                </div>
              </div>
              <button type="submit" class="btn btn-primary">Add game</button>
            </form>
          </div>
        </div>
      </div>
    </section>


    <section>
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h2>Laura</h2>
            <table class="table table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Platform</th>
                  <th scope="col">Release date</th>
                </tr>
              </thead>
              <tbody>
                <% for (var i = 0; i < newGameNameItems.length; i++) { %>
                  <tr>
                    <td><%= newGameNameItems[i] %></td>
                    <td><%= newGamePlatformItems[i] %></td>
                    <td><%= newGameReleasedateItems[i] %></td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <div class="col-md-6">
            <h2>Roope</h2>
            <table class="table table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Platform</th>
                  <th scope="col">Release date</th>
                </tr>
              </thead>
              <tbody>
                <% for (var i = 0; i < newGameNameItemsR.length; i++) { %>
                  <tr>
                    <td><%= newGameNameItemsR[i] %></td>
                    <td><%= newGamePlatformItemsR[i] %></td>
                    <td><%= newGameReleasedateItemsR[i] %></td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

  </main>
