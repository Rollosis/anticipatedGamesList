<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
  <meta name="generator" content="Hugo 0.88.1">
  <link rel="icon" type="image/x-icon" href="/images/joystick.png">
  <title>Most Hyped Games of 2022</title>

  <!-- Bootstrap core CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- Custom CSS file -->
  <link rel="stylesheet" type="text/css" href="/css/style.css">

</head>
<body>
  <main>

    <section class="sec-pad-top">
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <h1 class="display-5 fw-bold">Most Hyped Games of 2022</h1>
          </div>
        </div>
      </div>
    </section>

    <section class="sec-pad-top sec-pad-bottom" id="addForm">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h2>Add a new game</h2>
            <form action="/" method="post">
              <div class="form-row col-md-6">
                <div class="form-group col-md-6">
                  <label for="selectTable">Who is adding?</label>
                  <select class="form-control" id="selectTable" name="user" required>
                    <option value="">Select user...</option>
                    <option value="laura" name="laura">Laura</option>
                    <option value="roope" name="roope">Roope</option>
                  </select>
                </div>
              </div>
              <div id="formGroup" class="form-row col-md-12" style="display:none;">
                <div class="form-group col-md-5">
                  <label for="gameName">Game</label>
                  <input type="text" class="form-control" id="gamename" name="gameName" required>
                </div>
                <div class="form-group col-md-5">
                  <label for="platform">Platform</label>
                  <select id="platform" class="form-control" name="platform" required>
                    <option value="">Select platform...</option>
                    <option name="ps5">PS5</option>
                    <option name="switch">Switch</option>
                    <option name="pc">PC</option>
                    <option name="xbox">Xbox</option>
                  </select>
                </div>
                <div class="form-group col-md-5">
                  <label for="releaseDate">Release date</label>
                  <input type="date" class="form-control" name="releaseDate">
                </div>
              </div>
              <div style="margin-top:20px">
                <button type="submit" class="btn btn-primary">Add game</button>
              </div>
            </form>
          </div>
          <div class="col-md-6">
            <h2>Update a game</h2>
            <form action="/updateGame" method="post">
              <!--<div class="form-row col-md-6">
                <div class="form-group col-md-6">
                  <label for="selectTable">Who is adding?</label>
                  <select class="form-control" id="selectTable" name="user" required>
                    <option value="">Select user...</option>
                    <option value="laura" name="laura">Laura</option>
                    <option value="roope" name="roope">Roope</option>
                  </select>
                </div>
              </div>-->
              <div id="formGroup" class="form-row col-md-12">
                <div class="form-group col-md-5">
                  <label for="gameSelect">Game</label>
                  <select id="gameSelect" class="form-control" name="platform" required>
                    <option value="">Select game...</option>
                    <% roopeGameList.forEach(function(game) { %>
                    <option name="update" value="<%= game.id %>"><%= game.name %></option>
                    <% }); %>
                  </select>
                </div>
                <div class="form-group col-md-5">
                  <label for="updatedReleaseDate">Release date</label>
                  <input type="date" class="form-control" name="updatedReleaseDate">
                </div>
              </div>
              <div style="margin-top:20px">
                <button type="submit" class="btn btn-primary">Update game</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <section class="sec-pad-top">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h2>Laura</h2>
            <table class="table table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Game</th>
                  <th scope="col">Platform</th>
                  <th scope="col">Release date</th>
                </tr>
              </thead>
              <tbody>
                <% lauraGameList.forEach(function(game) { %>
                  <tr class="hover-trigger">
                    <td class="change-color"><%= game.name %></td>
                    <td class="change-color"><%= game.platform %></td>
                    <td class="change-color" name="test"><%= game.releaseDate %></td>
                    <td>
                      <form class="" action="/delete" method="post">
                        <button type="submit" name="deleteButton" class="btn btn-danger hover-target deleteButton" value="<%= game._id %>" onClick="deleteConfirm()">X</button>
                      </form>
                    </td>
                    <td>
                      <form class="" action="/transferLaura" method="post">
                        <button type="submit" name="transferButton" class="btn btn-warning hover-target transferButton" value="<%= game.name %>" onclick="this.form.submit()">-></button>
                      </form>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <div class="col-md-6">
            <h2>Roope</h2>
            <!--<form class="" action="/sortName" method="post">
              <button type="submit" name="sortButton" class="btn btn-danger" value="" onclick="this.form.submit()">X</button>
            </form>-->
            <table class="table table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Game</th>
                  <th scope="col">Platform</th>
                  <th scope="col">Release date</th>
                </tr>
              </thead>
              <tbody>
                <% roopeGameList.forEach(function(game) { %>
                  <tr class="hover-trigger">
                    <td class="change-color"><%= game.name %></td>
                    <td class="change-color"><%= game.platform %></td>
                    <td class="change-color"><%= game.releaseDate %></td>
                    <td>
                      <form class="" action="/deleted" method="post">
                        <button type="submit" name="deletedButton" class="btn btn-danger hover-target deleteButton" value="<%= game._id %>" onclick="this.form.submit()">X</button>
                      </form>
                    </td>
                    <td>
                      <form class="" action="/transferRoope" method="post">
                        <button type="submit" name="transferButton" class="btn btn-warning hover-target transferButton" value="<%= game.name %>" onclick="this.form.submit()">-></button>
                      </form>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

    <section class="sec-pad-top sec-pad-bottom" id="reviewForm">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h2>Add a review</h2>
            <form action="/gameReview" method="post">
              <div class="form-row col-md-12">
                <div class="form-group ">
                  <div class="form-group col-md-5">
                    <label for="gameName">Game</label>
                    <select id="releasedGame" type="text" name="releasedGameName" class="form-control" required>
                      <option value="">Select game for review...</option>
                      <% releasedGameList.forEach(function(releasedgame) { %>
                        <option><%= releasedgame.name %></option>
                      <% }); %>
                    </select>
                  </div>
                </div>
              </div>
              <div id="reviewFields" class="form-row col-md-12" style="display:none;">
                <div class="form-group col-md-5">
                  <label for="platform">Rating</label>
                  <select id="platform" class="form-control" name="rating" required>
                    <option value="">Select rating...</option>
                    <option name="1">1</option>
                    <option name="2">2</option>
                    <option name="3">3</option>
                    <option name="4">4</option>
                    <option name="5">5</option>
                    <option name="6">6</option>
                    <option name="7">7</option>
                    <option name="8">8</option>
                    <option name="9">9</option>
                    <option name="10">10</option>
                  </select>
                </div>
                <div class="form-group col-md-5">
                  <label for="review">Review</label>
                  <textarea rows="7" class="form-control" name="review" id="review"></textarea>
                </div>
              </div>
              <div style="margin-top:20px">
                <button type="submit" class="btn btn-primary">Submit review</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <section class="sec-pad-top sec-pad-bottom" id="releasedGamesTable">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h2>Released games</h2>
            <table class="table table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Game</th>
                  <th scope="col">Rating</th>
                  <th scope="col">Review</th>
                </tr>
              </thead>
              <tbody>
                <% releasedGameList.forEach(function(game) { %>
                  <tr>
                    <td class="change-color"><%= game.name %></td>
                    <td class="change-color"><%= game.rating %></td>
                    <td class="change-color"><%= game.review %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

  </main>
  <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
  <script charset="utf-8" src="/js/index.js"></script>
</body>
</html>
